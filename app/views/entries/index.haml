%table.highlight
  %thead
    %tr
      %th
        = Entry.human_attribute_name(:entry_date)
      %th
        = Entry.human_attribute_name(:sentences_added)
      %th
        = Entry.human_attribute_name(:words_added)
      %th
        = Entry.human_attribute_name(:commentary)
      %th
        = Entry.human_attribute_name(:language_project)
      %th
        = link_to new_entry_path do
          %i.material-icons add
  %tbody
    - @entries&.each do |entry|
      %tr
        %td
          =  humanized_date(entry.entry_date)
        %td
          = entry.sentences_added
        %td
          = entry.words_added
        %td
          = entry.commentary
        %td
          = entry.language_project.name
        %td
          = link_to edit_entry_path(entry) do
            %i.material-icons.tiny.pink-text mode_edit